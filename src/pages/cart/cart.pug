extends ../../layout/layout

block vars
	- var pageTitle = 'Оформление заказа'
	- var pageBodyClass = ''
	- var dir = './'

block premain
	.container
		.page-top
			+breadcrumbs({
				content2: 'Оформление заказа',
			})
			.page-top__header
				h1.page-top__title Оформление заказа

block main
	.main-inner
		.container
			include ../../components/cart/cart

block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()
block componentsStyles
	+style-includer()

block componentsScripts
	+componentsScripts-includer()

block scripts
	script(src="./js/vendor/swiper.min.js" defer)