extends ../../layout/layout

block vars
    - var pageTitle = 'Кофе'
    - var pageBodyClass = ''
    - var dir = './'


block premain
    .container
        .page-top
            +breadcrumbs({
                content2: 'Результаты поиска',
                href_content2: '#',

            })
            .page-top__header
                h1.page-top__title Результаты поиска
    .container
        +tabs({
            list: [

                {name: 'Кофе', mod: 'active'},
                {name: 'Аксессуары'},
                {name: 'Оборудование'},
                {name: 'Статьи'},
            ]
        })

block main
    include ../../components/search/search
    include ../../components/subscription/subscription

block pageModal

block componentsCriticalStyles
    +componentsCriticalStyles-includer()
block vendorScripts
    +vendorScripts-includer()
block scripts
    script(src="./js/vendor/nouislider.min.js" defer)

block componentsStyles
    +style-includer()
block componentsScripts
    +componentsScripts-includer()
