extends ../../layout/layout

block vars
	- var pageTitle = 'Главная'
	- var pageBodyClass = ''
	- var dir = './'


block premain
	.container
		.page-top.page-top--center
			+breadcrumbs({
				content2: 'Авторизация',
			})
			.page-top__header
				h1.page-top__title Авторизация


block main
	.main-inner
		.container
			.form-block-container
				.btn(data-toggle="modal" data-target="modal-auth") Вход в личный кабинет модалка
				br
				br
				form.form-block
					.form-block__descr Авторизовавшись, вы сможете управлять своими личными данными, следить за состоянием заказов.
					+input({
						fg_mod:'form-group--margin',
						label_mod: 'form-control-label--small',
						label: 'Логин',
						type: 'text',
						placeholder: false,
						required: true,
						pattern: false,
						validation: {
						message: 'Обязательное поле',
						regexp: 'Неверный формат',
						emailaddress: ' ',
						identical: false
						}
					})
					+input({
						fg_mod:'form-group--margin',
						label_mod: 'form-control-label--small',
						xType: "showPass ? 'text' : 'password'",
						label: 'Пароль',
						type: 'text',
						placeholder: false,
						required: true,
						pattern: false,
						validation: {
						message: 'Обязательное поле',
						regexp: 'Неверный формат',
						emailaddress: ' ',
						identical: false
						}
					})(x-data="{showPass: false}" )
						.show-pass(@click="showPass = !showPass" x-cloak)
							+icon('i-show-pass')(style="width:20px; height:20px")(x-show="!showPass")
							+icon('i-show-pass-2')(style="width:20px; height:20px")(x-show="showPass")
					.form-block__row
						+checkbox({
						})
							span Запомнить меня
						a(href='#').forgot Забыли пароль?
					.form-block__submit
						input(type="submit" value="Войти").btn.btn-lg.btn--primary
						button(type="submit").btn.btn-lg.btn-transparent Регистрация
					.policy-block
						<span> Продолжая, вы соглашаетесь с <a href="#" target="_blank">политикой конфиденциальности</a> и с <a href="#" target="_blank">публичной офертой</a></span>
				include ../../components/auth-service/auth-service
block pageModal

block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()
block componentsStyles
	+style-includer()
block componentsScripts
	+componentsScripts-includer()
