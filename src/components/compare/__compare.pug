mixin compare-card(args={})
    .compare-card
        .compare-card__inner
            .compare-card__remove
                +icon('i-remove')(style="width:14px; height:14px")
            .compare-card__header
                .compare-card__img
                    +lazy-img({
                        img: args.img
                    })
            .compare-card__body
                a(href='#').compare-card__title=args.title
                span.compare-card__price=args.price
                .compare-card__btn.btn В корзину

mixin compare-col(args={})
    .compare-col
        .compare-cell__header
            .compare-cell__header-img
                +lazy-img({
                    img: 'product-card-3.jpg'
                })
            .compare-cell__header-title Смартфон
            +icon('i-remove')(style="width:12px; height:12px")

        each i in args.list
            .compare-cell
                +icon('i-remove')(style="width:12px; height:12px")
                span.compare-cell__prop=i.prop
                .compare-cell__val=i.val

.compare-badges(x-data="{active: false}")
    .switch(@click="active = !active") показать бейдж
    a(href='').compare-badge(:class="active? 'active': ''")
        .compare-badge__left
            +lazy-img({
                img: 'product-card-3.jpg'
            })
        .compare-badge__right
            .compare-badge__title В сравнении
            span Винтовые гвозди
        +icon('i-close')(style="width:16px; height:16px")

    a(href='').compare-badge(:class="active? 'active': ''")
