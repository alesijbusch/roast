.video-review
    .container
        .video-review__header
            h3.section-title
                a(href="#").section-title__link
                    span Видеоотзывы
                    span.icon-wrap
                        +icon('i-arrow-right')(style="height:12px;width:12px")
        .video-review__inner
            each item in items
                .video-review-item
                    +lazy-img({
                        link: false,
                        wrap_mod: 'video-review-item__img-wrap',
                        img_mod: 'video-review-item__img',
                        img: item.img,
                        http: true,
                    })(data-video-id=item.video_id)
                        span(id='youtube-player-id-'+item.video_id).video-review-item__video
                    a(href="#").video-review-item__title=item.title
                    .video-review-item__period 16.08.2022

