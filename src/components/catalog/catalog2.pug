			include ../catalog-filters/catalog-filters
		.main-row
			//- .main-row__aside
			//-     .sticky-block
			//-         include ../slide-block/slide-block-1
			.main-row__main
				include ../filters-panel/filters-panel--sort
				.catalog__grid
					each item in [1,2,3,4]
						+product-card2({
							title: 'Бразилия Велосо Колекта',
							in_basket: true,
							no_rating: true,
							active:  true,
							badges: 2,
							no_price_old: true,
						})
						+product-card2({
							title: 'Бразилия Велосо Колекта',
							in_basket: false,
							badges: 1,
						})
						+product-card2({
							title: 'Бразилия Велосо Колекта',
							in_basket: false,
							badges: 1,
						})
						+product-card2({
							title: 'Бразилия Велосо Колекта',
							in_basket: true,
							no_rating: true,
							active:  true,
							badges: 2,
						})
						+product-card2({
							title: 'Бразилия Велосо Колекта',
							in_basket: false,
							badges: 1,
						})
				.catalog__bottom        
					.catalog__more
						.btn.btn-wave Загрузить еще
							span 12
						.btn.btn-transparent.btn-wave.preloader Загрузить еще
					.catalog__pagination
						include ../pagination/pagination